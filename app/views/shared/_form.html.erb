<%= form_with model: @sches do |f|%>
    <table class="input_form">
    <tr>
      <th><%= f.label :title,t("activerecord.attributes.schedule.title")%></th>
      <td><%= f.text_field :title %></td>
    </tr>
    <tr>
      <th><%= f.label :start_day,t("activerecord.attributes.schedule.start_day")%></th>
      <td><%= f.date_field :start_day %></td>
    </tr>
    <tr>
      <th><%= f.label :end_day,t("activerecord.attributes.schedule.end_day")%></th>
      <td><%= f.date_field :end_day %></td>
    </tr>
    <tr>
      <th><%= f.label :all_day_long,t("activerecord.attributes.schedule.all_day_long")%></th>
      <td><%= f.check_box :all_day_long %><br>終日の場合はチェックを入れてください</td>
    </tr>
    <tr>
      <th><%= f.label :description,t("activerecord.attributes.schedule.description")%></th>
      <td><%= f.text_area :description %></td>
    </tr>
    </table>
    
  <div class="transition_path_form">
    <ul>
      <li><%= f.submit "#{submit_text}"%></li>
      <li><%= link_to("スケジュール一覧に戻る", schedules_path)%></li>
    </ul>
  </div>
<% end %>